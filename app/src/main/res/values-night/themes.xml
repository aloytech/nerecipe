<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NeRecipe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:navigationBarColor">@color/md_sys_color_primary_dark</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_sys_color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/md_sys_color_primary_light</item>
        <item name="colorOnPrimary">@color/md_sys_color_on_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_sys_color_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/md_sys_color_secondary_light</item>
        <item name="colorOnSecondary">@color/md_sys_color_on_secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

    </style>
</resources>